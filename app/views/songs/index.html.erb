<p id="notice"><%= notice %></p>

<h1>Listing Songs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Length seconds</th>
      <th>Completed</th>
      <th>Tracker</th>
      <th>Free</th>
      <th>External</th>
      <th>Skipped</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.subtitle %></td>
        <td><%= song.length_seconds %></td>
        <td><%= song.completed %></td>
        <td><%= song.tracker %></td>
        <td><%= song.free %></td>
        <td><%= song.external %></td>
        <td><%= song.skipped %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

